generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  guru
  siswa
  orangtua
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  phone    String @unique @db.VarChar(20)
  email    String @unique
  password String
  role     Role

  nilai Nilai[] @relation("UserToNilai")
}

model Nilai {
  id            Int    @id @default(autoincrement())
  siswaId       Int
  mataPelajaran String
  nilai         Int
  semester      String
  tahunAjaran   String

  siswa     User     @relation("UserToNilai", fields: [siswaId], references: [id])
  createdAt DateTime @default(now())
}
