generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  guru
  siswa
  orangtua
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  phone    String @unique @db.VarChar(20)
  email    String @unique
  password String
  role     Role

  siswa Siswa?
  guru  Guru?
  orangTua OrangTua?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Siswa {
  id    Int    @id @default(autoincrement())
  kelas String
  nis   String @unique

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  nilai Nilai[]
  OrangTua OrangTua[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model OrangTua {
  id    Int    @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  siswa     Siswa  @relation(fields: [nissiswa], references: [nis])
  nissiswa  String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Guru {
  id  Int    @id @default(autoincrement())
  nip String @unique

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  nilai     Nilai[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum JenisNilai {
  tugas
  ulangan
  uts
  uas
}

model Nilai {
  id            Int    @id @default(autoincrement())
  mataPelajaran String
  nilai         Int
  semester      String
  jenisNilai    JenisNilai

  siswa   Siswa @relation(fields: [siswaId], references: [id])
  siswaId Int
  guru    Guru  @relation(fields: [guruId], references: [id])
  guruId  Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
