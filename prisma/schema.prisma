generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  guru
  siswa
  orangtua
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  role     Role

  siswa Siswa?
  ortu  Ortu?
}

model Siswa {
  id       String  @id @default(cuid())
  userId   String  @unique
  user     User    @relation(fields: [userId], references: [id])
  nama     String
  nilai    Nilai[]
  ortuAnak Ortu[]  @relation("AnakOrtu")
}

model Ortu {
  id     String  @id @default(cuid())
  userId String  @unique
  user   User    @relation(fields: [userId], references: [id])
  anak   Siswa[] @relation("AnakOrtu")
}

model Nilai {
  id            String   @id @default(cuid())
  siswaId       String
  siswa         Siswa    @relation(fields: [siswaId], references: [id])
  mataPelajaran String
  nilai         Int
  semester      String
  tahunAjaran   String
  createdAt     DateTime @default(now())
}
